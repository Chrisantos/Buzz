<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardDarkBg</item>
        <item name="colorPrimaryDark">@color/appDarkBg</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/appDarkBg</item>
        <item name="colorAccent">@color/grayish_blue</item>
        <item name="android:fontFamily">@font/dark_font</item>
    </style>

    <style name="BuzzSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">13sp</item>
    </style>
</resources>
