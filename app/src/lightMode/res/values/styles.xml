<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardDarkBg</item>
        <item name="colorPrimaryDark">@color/appDarkBg</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/appDarkBg</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:fontFamily">@font/light_font</item>
    </style>

    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/light_font</item>
    </style>

</resources>
